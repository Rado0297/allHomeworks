.container
    .row
        .col-md-2 Search
        .col-md-4
            input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-2 Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" ", ng-selected="'true'") Default
                option(value="title") Title
                option(value="published") Released
    br
    table.table
        tr
            th Phones
            th Released
        tr(ng-repeat="phone in phones | filter: search | orderBy: sort")
            td
                a(href="#/phones/{{ phone._id }}") {{ phone.title }}
            td {{ phone.published | date }}